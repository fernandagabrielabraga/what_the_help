<div class="container">
  <div class="d-flex justify-content-around position-relative p-3 align-items-center">
    <h3 class="card-title pt-2"><strong>My donations</strong></h3>
  </div>
</div>
<div class="container_donations d-flex h-100 justify-content-around position-relative ">
  <div class="grid-donations mx-2 mt-2 h-100 d-flex flex-wrap justify-content-around ">
    <%# if @confirmations.user_id === current_user.id? %>
      <% if @confirmations.empty? %>
        <h5>Sorry, we don't donated yet!</h5>
      <% else %>
        <% @confirmations.each_with_index do |confirmation, index| %>
          <div class="donation-card card-confirmation bg-white d-flex flex-column align-items-center p-2 m-3" style="width:250px;">
            <div class="thumbnail pt-4">
              <img src="<%= cl_image_path confirmation.donation.image.key %>" class="portrait" alt="Image">
            </div>
            <div class="card-body d-flex flex-column bg-white donation-body justify-content-between p-2">
              <div class="d-flex justify-content-around text-center">
                <h4 class="card-title pt-2"><strong><%= confirmation.donation.donation_name %></strong></h4>
              </div>
              <div class="mb-2 mt-2 d-flex justify-content-around text-center ">
                <h5 class="card-text "><strong><%= confirmation.donation.location %></strong></h5>
              </div>
              <div class="mb-2 mt-2 d-flex justify-content-around text-cente">
                <h5 class="card-text text-muted"><strong><%= confirmation.donation.category.name %></strong></h5> <!-- Comentario aqui ><!-->
              </div>
              <div class="mb-2 mt-2 d-flex justify-content-around text-center">
                <h5 class="card-text  "> <%= confirmation.created_at.strftime("%m/%d/%Y") %></h5>
              </div>
              <div class= "d-flex justify-content-around align-items-center p-1">
                <%= link_to 'Back to my Profile', current_user ,class:"btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <%# end %>
  </div>
</div>
