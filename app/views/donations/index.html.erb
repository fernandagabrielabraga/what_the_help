<div class="container d-flex">
  <div class="container campaigns">
    <div class="title-campaigns">Discover who needs your support</div>
    <div class="heading-campaigns">People all over the world are using what the HELP! and finding great supporters around here.
    Need some help today?</div>
    <br>
    <%=link_to "/donations/new", class:"start-here" do %> <p class="btn btn-edit"><i class="fas fa-heart"></i> START HERE</p>
    <%end%>
  </div>
</div>

<div class="container_donations d-flex h-100 w-100 position-relative">
  <div class="grid-donations mx-2 mt-2 h-100 d-flex flex-wrap justify-content-around" style="width: 60%;">
    <% if @donations.empty? %>
      <h5>Sorry, we couldn't find what you're looking for.</h5>
    <% else %>
      <% @donations.each_with_index do |donation, index| %>
        <div class="donation-card card d-flex flex-column align-items-center p-2 m-2">
          <div class="donation-img thumbnail ">
            <img src="<%= cl_image_path donation.image.key %>" class="portrait" alt="Image">
          </div>
          <div class="card-body d-flex flex-column bg-white donation-body justify-content-between">
          <div class="d-flex justify-content-between">
            <h4 class="card-title"><strong><%= donation.donation_name %></strong></h4>
            <div>
              <i class="fas fa-eye"></i> <%= rand(50..499) %> views <!-- Comentario aqui ><!-->
            </div>
          </div>
          <div class="mb-2 mt-2 d-flex align-content-center">
            <label for=""><i class="fas fa-map-marker-alt"></i> <%= donation.location %></label>
          </div>
            <p class="card-text"><%= donation.description.truncate(100) %></p> <!-- Comentario aqui ><!-->
          <div class="mb-2 mt-2 d-flex align-content-center">
            <label for=""><i class="fas fa-hands-helping"></i> <%= donation.donation_received %> persons donated</label>
          </div>
            <%= link_to 'Donation', donation,class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex-grow-1 h-100 mapbox mx-4 mt-3 position-sticky" style="top:10vh; z-index:0">
    <div style="width: 100%; height: 90vh;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <br>
</div>
<br>
