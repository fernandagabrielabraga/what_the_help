<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a.reverse!, label: "Rate your experience", include_blank: false %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
